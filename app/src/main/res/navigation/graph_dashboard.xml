<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_dashboard"
    app:startDestination="@id/nav_dashboard">

    <fragment
        android:id="@+id/nav_habit_fragment"
        android:name="com.alanstd_3.alanbujo.ui.fragments.HabitFragment"
        android:label="HabitFragment"
        tools:layout="@layout/fragment_habit">
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/nav_test_fragment"
        android:name="com.alanstd_3.alanbujo.ui.fragments.test.TestFragment"
        android:label="TestFragment"
        tools:layout="@layout/fragment_test" />
    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.alanstd_3.alanbujo.ui.fragments.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_nav_dashboard_to_nav_habit_fragment"
            app:destination="@id/nav_habit_fragment" />
    </fragment>


</navigation>