<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black">

    <androidx.cardview.widget.CardView
        style="@style/BujoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/habit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="Cap sentence."
                android:fontFamily="@font/amatic_sc_regular"
                android:gravity="center"
                android:hint="@string/hint_habit_name"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_AA"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <EditText
                android:id="@+id/goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="Cap sentence."
                android:fontFamily="@font/amatic_sc_regular"
                android:gravity="center"
                android:hint="@string/hint_habit_goal"
                android:inputType="number"
                android:textColor="@color/gray_67"
                android:textColorHint="@color/gray_AA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/min_goal"
                app:layout_constraintTop_toBottomOf="@id/habit_name" />

            <EditText
                android:id="@+id/min_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="Cap sentence."
                android:fontFamily="@font/amatic_sc_regular"
                android:gravity="center"
                android:hint="@string/hint_habit_goal"
                android:inputType="number"
                android:textColor="@color/gray_67"
                android:textColorHint="@color/gray_AA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/goal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/goal" />

            <LinearLayout
                android:id="@+id/days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/goal"
                android:gravity="center_horizontal"
                android:layout_marginVertical="12dp"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mo"
                    android:checked="true"
                    android:enabled="false"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu"
                    android:checked="true"
                    android:enabled="false"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We"
                    android:checked="true"
                    android:enabled="false"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Th"
                    android:checked="true"
                    android:enabled="false"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fr"
                    android:checked="true"
                    android:enabled="false"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sa"
                    android:checked="true"
                    android:enabled="false"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Su"
                    android:checked="true"
                    android:enabled="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_select_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/days">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_color_button"
                    style="@style/BujoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="select color"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/selected_color"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="@color/alan_green"
                    app:layout_constraintBottom_toBottomOf="@id/add_color_button"
                    app:layout_constraintStart_toEndOf="@id/add_color_button"
                    app:layout_constraintTop_toTopOf="@id/add_color_button" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_buttom"
                style="@style/BujoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/alan_aqua"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_select_color"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>