<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <View
        android:id="@+id/img_bg"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:background="@drawable/shape_corner_rounded"
        android:backgroundTint="@color/alan_light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:background="@drawable/shape_corner_rounded"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/img_bg"
        app:layout_constraintEnd_toEndOf="@id/img_bg"
        app:layout_constraintStart_toStartOf="@id/img_bg"
        app:layout_constraintTop_toTopOf="@id/img_bg" />

    <TextView
        android:id="@+id/name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/neucha"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/img_bg"
        tools:text="Prueba de texto por lo tanto" />

    <ImageView
        android:id="@+id/goal_caption"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="0dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_check_circle_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/alan_yellow"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>