<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alan_light_blue"
    tools:context=".ui.fragments.HabitFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:alpha=".7"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/neucha"
        android:rotation="-5"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DRINK WATER" />


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Short description about the habit._" />

    <LinearLayout
        android:id="@+id/items_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/description">

<!--        <com.google.android.material.checkbox.MaterialCheckBox-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_margin="12dp"-->
<!--            android:layout_marginHorizontal="18dp"-->
<!--            android:button="@drawable/ic_circle_24"-->
<!--            android:checked="true"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notes_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alan_cream"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/items_list"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/note_1"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="18dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/feet_icon" />

        <ImageView
            android:id="@+id/note_2"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="18dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/feet_icon" />

        <ImageView
            android:id="@+id/note_3"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="18dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/feet_icon" />

    </LinearLayout>

    <ImageView
        android:id="@+id/add_note_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginHorizontal="18dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/feet_icon"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notes_list"
        tools:visibility="visible"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        style="@style/BujoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/button_submit"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_note_button" />

</androidx.constraintlayout.widget.ConstraintLayout>